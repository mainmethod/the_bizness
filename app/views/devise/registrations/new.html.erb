<div class="login-form">
    <h2>Sign up</h2>
    <%= devise_error_messages! %>
    <div class="inner-form-wrap">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            
        
            <div class="input">
                <%= f.label :email %>
                <%= f.email_field :email, :autofocus => true, :placeholder => 'noobie@thebiz.com' %>
            </div>
          
            <div class="input">
                <%= f.label :birthday %>
                <%= f.date_select :birthday, :start_year => 1900 %>
            </div>
            
            <% resource.build_location %>
            <% resource.location.city = request.location.city unless request.location.city.empty? %>
            <% resource.location.state = request.location.state unless request.location.state.empty? %>
            
            <%= f.fields_for :location do |l| %>
                <div class="input">
                    <%= f.label :city %>
                    <%= l.text_field :city, :placeholder => 'City' %>
                </div>
                <div class="input">
                    <%= f.label :state %>
                    <%= l.text_field :state, :placeholder => 'State' %>
                </div>
            <% end %>
        
            <div class="input">
                <%= f.label :password %>
                <%= f.password_field :password %>
            </div>
        
            <div class="input">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation %>
            </div>
        
            <%= f.submit "Sign up", :class => 'btn save' %>
      </div>
<% end %>
</div>
