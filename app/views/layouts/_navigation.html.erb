<div class="fixed-hd">
    
    <div class="search-select">
        <%= render :partial => "users/search", :collection => nil, :as => :user %> 
    </div>

    <div class="top-nav">
        <ul>
            <li><a class="icon icon-house"></a></li>
            <li class="active"><a>Community</a></li>
            <li><a>Blog</a></li>
        </ul>
    </div>
    
    <div class="bottom-nav">
        
        <div class="logo">The<b>Biz</b></div>

        <span class="icon icon-search"></span>
        <%= text_field_tag 'term', nil, :placeholder => 'Find...', :autocomplete => 'off'  %>

        <div class="right-buttons">

            <div class="user-info">
            
                <a href="/me"><%= image_tag current_user.image_path.url(:thumb) %></a>
            
                <div class="flyout">
                    <div class="inner">
                        <b><a href="/me"><%= current_user.first_name %> <%= current_user.last_name %></a></b>
                        <a class="logout" data-method="delete" href="<%= destroy_user_session_path %>"><span class="icon icon-close"></span> Log Out</a>
                    </div>
                </div>

            </div>
            
            <a class="messages" href="">
                <span class="count"><%= current_user.messages.unread.count %></span>
                <span class="icon icon-comment"></span>
            </a>
        </div>
        
    </div>
    
</div>

<div class="left-nav">
    
    <ul class="nav">
        <%= nav_link 'Conversation', posts_path, 'list' %>
        <%= nav_link 'People', users_path, 'users' %>
        <%= nav_link 'Locations', nearby_path, 'location' %>
    </ul>
    
</div>