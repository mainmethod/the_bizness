<div class="profile">
    
     <div class="profile-header">
        
        <%= image_tag @user.image_path.url(:profile) %>
        <h1><%= @user.full_name %></h1>
        <div class="title">Title</div>
        
    </div>
    
    <div class="user-info">
            
        <a class="pill following">
            <span><% @user.followed_users.count %></span> following
        </a>
        
        <a class="pill followers">
            <span><%= @user.followers.count %></span> followers
        </a>
        
        <a class="pill location">
            <span class="icon icon-location"></span> <%= @user.location.city %>, <%= @user.location.state %>
        </a>

        <% if !current_user.following?(@user) %>
            <a href="<%= follow_user_path(@user) %>" class="pill follow-status">
                <span class="icon icon-checkmark"></span> Follow
            </a>
        <% else %>   
            <a href="<%= unfollow_user_path(@user) %>" class="pill follow-status active">
                <span class="icon icon-checkmark"></span> Following
            </a>
        <% end %>   
        <div class="clb"></div>
        
    </div>
    
    <%= render :partial => 'posts/form' %>

    <%= render :partial => 'posts/post', :collection => @user.posts %>
    
</div>
